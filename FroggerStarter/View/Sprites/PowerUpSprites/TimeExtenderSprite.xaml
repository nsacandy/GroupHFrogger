<local:BaseSprite
    x:Class="FroggerStarter.View.Sprites.PowerUpSprites.TimeExtenderSprite"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FroggerStarter.View.Sprites"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Height="50"
    Width="40">

    <UserControl.Resources>
        <SolidColorBrush x:Name="FrameTopAndBottom" Color="SaddleBrown" />
        <SolidColorBrush x:Name="FrameLegs" Color="BurlyWood" />
    </UserControl.Resources>


    <Canvas>
        <Rectangle Width="30" Height="5" Fill="{StaticResource FrameTopAndBottom}" Canvas.Top="5" Canvas.Left="5" />
        <Polygon Fill="White" Points="10,10,30,10,10,40,30,40" />
        <Rectangle Width="30" Height="5" Fill="{StaticResource FrameTopAndBottom}" Canvas.Top="40" Canvas.Left="5" />
        <Rectangle Width="2" Height="30" Fill="{StaticResource FrameLegs}" Canvas.Top="10" Canvas.Left="33" />
        <Rectangle Width="2" Height="30" Fill="{StaticResource FrameLegs}" Canvas.Top="10" Canvas.Left="5" />
    </Canvas>
</local:BaseSprite>