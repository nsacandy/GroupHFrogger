<local:BaseSprite
    x:Class="FroggerStarter.View.Sprites.DeathSprite"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FroggerStarter.View.Sprites"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Height="50"
    Width="50">


    <UserControl.Resources>
        <SolidColorBrush x:Name="FrogColor" Color="LawnGreen" />
    </UserControl.Resources>


    <Canvas x:Name="deathCanvas">

        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="CommonStates">

                <VisualState x:Name="OriginalSprite" />

                <VisualState x:Name="Dying">
                    <Storyboard >
                        <ColorAnimationUsingKeyFrames Storyboard.TargetName="FrogColor" Storyboard.TargetProperty="Color">
                            <LinearColorKeyFrame Value="Yellow" KeyTime="0:0:0.5" />
                            <LinearColorKeyFrame Value="Red" KeyTime="0:0:1" />
                            <LinearColorKeyFrame Value="Purple" KeyTime="0:0:1.5"/>
                            <LinearColorKeyFrame Value="Transparent" KeyTime="0:0:3"/>
                        </ColorAnimationUsingKeyFrames>
                        <DoubleAnimation Storyboard.TargetName="rightEye" Storyboard.TargetProperty="Opacity" From="1.0" To="0.0" BeginTime="0:0:1" Duration="0:0:1"/>
                        <DoubleAnimation Storyboard.TargetName="leftEye" Storyboard.TargetProperty="Opacity" From="1.0" To="0.0" BeginTime="0:0:1" Duration="0:0:1"/>
                        <DoubleAnimation Storyboard.TargetName="splatOne" Storyboard.TargetProperty="Opacity" From="0.0" To="1.0" BeginTime="0:0:1.5" Duration="0:0:1"/>
                        <DoubleAnimation Storyboard.TargetName="splatTwo" Storyboard.TargetProperty="Opacity" From="0.0" To="1.0" BeginTime="0:0:1.5" Duration="0:0:1"/>
                        <DoubleAnimation Storyboard.TargetName="deadLeftArm" Storyboard.TargetProperty="Opacity" From="0.0" To="1.0" BeginTime="0:0:1.5" Duration="0:0:1"/>
                        <DoubleAnimation Storyboard.TargetName="deadLeftLeg" Storyboard.TargetProperty="Opacity" From="0.0" To="1.0" BeginTime="0:0:1.5" Duration="0:0:1"/>
                        <DoubleAnimation Storyboard.TargetName="deadRightArm" Storyboard.TargetProperty="Opacity" From="0.0" To="1.0" BeginTime="0:0:1.5" Duration="0:0:1"/>
                        <DoubleAnimation Storyboard.TargetName="deadRightLeg" Storyboard.TargetProperty="Opacity" From="0.0" To="1.0" BeginTime="0:0:1.5" Duration="0:0:1"/>
                        <DoubleAnimation Storyboard.TargetName="deathCanvas" Storyboard.TargetProperty="Opacity" From="1.0" To="0.0" BeginTime="0:0:3" Duration="0:0:1"/>
                    </Storyboard>
                    </VisualState>
                
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>


        <Rectangle x:Name="body" Canvas.Top="10" Canvas.Left="10" Fill="{StaticResource FrogColor}" Width="30" Height="30" />
        <Rectangle Canvas.Top="5" Canvas.Left="15" Fill="{StaticResource FrogColor}" Width="20" Height="5" />
        <Rectangle Canvas.Top="40" Canvas.Left="15" Fill="{StaticResource FrogColor}" Width="20" Height="5" />

        <Rectangle Canvas.Top="20" Canvas.Left="5" Fill="{StaticResource FrogColor}" Width="5" Height="5" />
        <Rectangle Canvas.Top="0" Canvas.Left="0" Fill="{StaticResource FrogColor}" Width="5" Height="20" />
        <Rectangle x:Name="leftEye" Canvas.Top="10" Canvas.Left="10" Fill="Blue" Width="5" Height="5" />
        <Rectangle x:Name="rightEye" Canvas.Top="10" Canvas.Left="35" Fill="Blue" Width="5" Height="5" />
        

        <Rectangle Canvas.Top="20" Canvas.Left="5" Fill="{StaticResource FrogColor}" Width="5" Height="5" />
        <Rectangle Canvas.Top="17.5" Canvas.Left="2.5" Fill="{StaticResource FrogColor}" Width="5" Height="5" />
        <Rectangle x:Name="leftArm" Canvas.Top="0" Canvas.Left="0" Fill="{StaticResource FrogColor}" Width="5" Height="20" />

        <Rectangle Canvas.Top="20" Canvas.Left="40" Fill="{StaticResource FrogColor}" Width="5" Height="5" />
        <Rectangle Canvas.Top="17.5" Canvas.Left="42.5" Fill="{StaticResource FrogColor}" Width="5" Height="5" />
        <Rectangle x:Name="rightArm" Canvas.Top="0" Canvas.Left="45" Fill="{StaticResource FrogColor}" Width="5" Height="20" />

        <Rectangle Canvas.Top="30" Canvas.Left="5" Fill="{StaticResource FrogColor}" Width="5" Height="5" />
        <Rectangle x:Name="leftLeg" Canvas.Top="30" Canvas.Left="0" Fill="{StaticResource FrogColor}" Width="5" Height="20" />

        <Rectangle Canvas.Top="30" Canvas.Left="40" Fill="{StaticResource FrogColor}" Width="5" Height="5" />
        <Rectangle x:Name="rightLeg" Canvas.Top="30" Canvas.Left="45" Fill="{StaticResource FrogColor}" Width="5" Height="20" />

        <Ellipse Canvas.Top="20" Canvas.Left="15" Fill="Yellow" Width="5" Height="5" />
        <Ellipse Canvas.Top="28" Canvas.Left="25" Fill="Yellow" Width="5" Height="5" />
        <Ellipse Canvas.Top="12" Canvas.Left="23" Fill="YellowGreen" Width="5" Height="5" />
        <Ellipse x:Name="testBump" Canvas.Top="23" Canvas.Left="33" Fill="Yellow" Width="5" Height="5" />
        <Ellipse Canvas.Top="33" Canvas.Left="19" Fill="YellowGreen" Width="5" Height="5" />

        <Ellipse x:Name="splatOne"  Canvas.Top="0" Canvas.Left="15" Fill="DarkGreen" Width="20" Height="50" Opacity="0.0"></Ellipse>
        <Ellipse x:Name="splatTwo"  Canvas.Top="15" Canvas.Left="0" Fill="DarkGreen" Width="50" Height="20" Opacity="0.0"></Ellipse>
        <Rectangle x:Name="deadRightLeg" Canvas.Top="30" Canvas.Left="35" Fill="DarkGreen" Width="5" Height="20" Opacity="0.0"/>
        <Rectangle x:Name="deadLeftLeg" Canvas.Top="30" Canvas.Left="10" Fill="DarkGreen" Width="5" Height="20" Opacity="0.0" />
        <Rectangle x:Name="deadRightArm" Canvas.Top="0" Canvas.Left="35" Fill="DarkGreen" Width="5" Height="20" Opacity="0.0"/>
        <Rectangle x:Name="deadLeftArm" Canvas.Top="0" Canvas.Left="10" Fill="DarkGreen" Width="5" Height="20" Opacity="0.0"/>
    </Canvas>
</local:BaseSprite>
